{
  "settings": {
    "index": {
      "knn": true,
      "number_of_shards": {{ target_index_primary_shards }},
      "number_of_replicas": {{ target_index_replica_shards }}
    }
  },
  "mappings": {
    "properties": {
      "target_field": {
        "type": "knn_vector",
        "dimension": {{ target_index_dimension }},
        "method": {
          "name": "nsg",
          "space_type": "{{ target_index_space_type }}",
          "engine": "faiss",
          "parameters": {
            "r": {{ hnsw_m }}
          }
        }
      }
    }
  }
}
